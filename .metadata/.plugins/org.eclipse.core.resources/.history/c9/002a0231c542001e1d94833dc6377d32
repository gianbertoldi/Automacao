package page;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

import utils.AcoesSelenium;

public class EnderecoPage extends AcoesSelenium{

	private WebDriver driver;
	
	public EnderecoPage(WebDriver driver) {
		this.driver = driver;
	}
	
	public static final By inputEndereco = By.xpath("//input[@class='css-10l4r8f-Input']");
	public static final By inputEndereco2 = By.xpath("//input[@id='address-search-input-address']");
	public static final By maiorIdade = By.id("age-gate-button-yes");
	public static final By primeiroEndereco = By.xpath("//div[@class='css-13udsys']");
	public static final By numeroEndereco = By.id("address-details-input-number");
	public static final By selectSemComplemento = By.id("address-details-checkbox-without-complement");

	
	public void souMaiorDeIdade() {
		click(driver, maiorIdade, 10);
	}
	public void endereco() {
		click(driver, inputEndereco, 10);
		enviarDados(driver, inputEndereco2, "Manuel Braga Gastal", 10);
	}
	public void primeiraOpcao() {
		click(driver, primeiroEndereco, 10);
	}
	
	public void numeroEndereco() {
		click(driver, numeroEndereco, 10);
		enviarDados(driver, numeroEndereco, "181", 10);
	}
	
	public void semComplemento() {
		click(driver, selectSemComplemento, 10);
	}
}
